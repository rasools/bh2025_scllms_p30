{
  // VS Code tasks to run the Makefile target `nextflow`
  "version": "2.0.0",
  "tasks": [
    {
      "label": "scgpt flow",
      "type": "shell",
      "command": "make",
      "args": [
        "scgpt"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          // nextflow needs java <18
          "JAVA_HOME": "/usr/local/opt/openjdk@17",
          "PATH": "$JAVA_HOME/bin:$PATH"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
  ]
}


